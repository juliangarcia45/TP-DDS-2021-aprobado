<head>
    <title>Rescate de Patitas</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="css/main.css" />
</head>
<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      <h2 class="inactive underlineHover  login_title"><a href="/signIn">Sign In</a></h2>
      <h2 class="active login_title">Sign Up </h2>
  
      <!-- Icon -->
      <div class="fadeIn first userIcon" >
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR9Ti-Xm618Ujo0uvWSvOR1qn3Tslo9o43KVg&usqp=CAU" id="icon" alt="User Icon" />
      </div>
  
      <!-- Login Form -->
      <form action="/registrar" method="post">
        <input type="text" id="login" class="fadeIn second" name="nombreDeUsuario" placeholder="nombre de usuario">
        <input type="password" id="password" class="fadeIn third" name="contrasenia" placeholder="contrasenia" >
        <input type="text" id="login" class="fadeIn second" name="nombre" placeholder="nombre">
        <input type="text" id="login" class="fadeIn second" name="apellido" placeholder="apellido">
        <input type="date" id="login" class="fadeIn second" name="fechaNacimiento">
        <!--Agregar un listDe TIPO DE DOC DNI,LC,PASS,CI-->
        <select name="tipoDoc" id="login" class="fadeIn second">
          <option value="">Seleccione el Tipo de Documento</option>
          <option value="DNI">DNI</option>
          <option value="LC">LC</option>
          <option value="PASS">PASS</option>
          <option value="CI">CI</option>
        </select>
         <input type="text" id="login" class="fadeIn second" name="docNumb" placeholder="numero de documento">
         <input type="text" id="login" class="fadeIn second" name="direccion" placeholder="direccion">
        <!--Agregar medios de contacto de forma dinamica-->
        <label id="login">Contacto: </label>
        <input type="text" id="login" class="fadeIn second" name="nombreContacto" placeholder="nombre contacto">
        <input type="text" id="login" class="fadeIn second" name="apellidoContacto" placeholder="apellido contacto">
        
        <input type="email" id="login" class="fadeIn second" name="emailContacto" placeholder="email de contacto">
        <input type="text" id="login" class="fadeIn second" name="telefonoContacto" placeholder="telefono">
        <select name="prefSMS" id="prefSMS" class="fadeIn second">
           <option value="">Desea recibir notificaciones por SMS?</option>
           <option value="SMS">SI</option>
           <option value="noSMS">NO</option>
        </select>
        <select name="prefWPP" id="prefWPP" class="fadeIn second">
           <option value="">Desea recibir notificaciones por WhatsApp?</option>
           <option value="WPP">SI</option>
           <option value="noWPP">NO</option>
        </select>
        <select name="prefMAIL" id="prefMAIL" class="fadeIn second">
           <option value="">Desea recibir notificaciones por email?</option>
           <option value="MAIL">SI</option>
           <option value="noMAIL">NO</option>
        </select>
         <select name="tipoUsuario" id="login" class="fadeIn second">
           <option value="">Seleccione su tipo de usuario</option>
           <option value="DUENIO">Duenio</option>
           <option value="RESCATISTA">Rescatista</option>
         </select>
        {{#if faltanDatos}}
         <label> Ingrese todos los datos pedidos por favor</label>
        {{/if}}
        {{#if usuarioEnUso}}
        <label>El usuario ya esta en uso.</label>
        {{/if}}
        {{#if contraseniaIncorrecta}}
         <label> Ingrese una contrasenia valida por favor</label>
        {{/if}}
        <button type="submit"  class="fadeIn fourth">Registrarse</button>

      </form>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="#">Olvidaste tu contrasenia?</a>
      </div>
  
    </div>
  </div>