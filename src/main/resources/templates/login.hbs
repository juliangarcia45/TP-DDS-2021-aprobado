</head>
<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      <h2 class="active login_title"> Sign In </h2>
      <h2 class="inactive underlineHover login_title">Sign Up </h2>
  
      <!-- Icon -->
      <div class="fadeIn first userIcon" >
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQfn92Uz0WoedKHZbOdgPrHJKS9lP90htuueQ&usqp=CAU" id="icon" alt="User Icon" />
      </div>
  
      <!-- Login Form -->
      <form>
        <input type="text" id="login" class="fadeIn second" name="usuario" placeholder="Login">
        <input type="text" id="password" class="fadeIn third" name="contrasenia" placeholder="Password">
        <button type="button" name="Log in" class="fadeIn fourth" onclick="guardarUsuario()" >Log in</button>

      </form>
  
      <!-- Remind Passowrd -->
      <div id="formFooter">
        <a class="underlineHover" href="#">Olvidaste tu contrasenia?</a>
      </div>
  
    </div>
  </div>