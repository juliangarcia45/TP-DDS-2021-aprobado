<head>
    <title>Rescate de Patitas</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="css/main.css" />
</head>

<div class="wrapper fadeInDown">
    <div id="formContent" class="registrar-usuario">
      <!--  Form -->
      {{#if registrar}}
      <h1>Agregar usuario</h1>
      {{#if admin}}
      <form action="/admin/registrarUsuario" method="post">
      {{/if}}
      {{#if voluntario}}
      <form action="/voluntario/registrarVoluntario" method="post">
      {{/if}}
      {{/if}}
      {{#if editar}}
      <h1>Actualizar usuario</h1>
      {{#if admin}}
      <form action="/admin/actualizarUsuario" method="post">
      {{/if}}
      {{#if voluntario}}
      <form action="/voluntario/actualizarVoluntario" method="post">
      {{/if}}
      {{/if}}
      {{#if ver}}
      <h1>Ver usuario</h1>
      <form>
      {{/if}}
        <input type="hidden" name="id" {{#if usuario}} value="{{usuario.id}}" {{/if}}>
        <input type="text" id="usuario" class="fadeIn second" name="usuario" placeholder="Usuario" {{#if usuario}} value="{{usuario.usuario}}" {{/if}} {{#if ver}} disabled {{/if}} {{#if editar}} disabled {{/if}}>
        <input type="password" id="contrasenia" class="fadeIn third" name="contrasenia" placeholder="Contrasenia" {{#if usuario}} value="{{usuario.contrasenia}}" {{/if}} {{#if ver}} disabled {{/if}}>
        <input type="text" id="nombre" class="fadeIn second" name="nombre" placeholder="Nombre" {{#if usuario}} value="{{usuario.nombre}}" {{/if}} {{#if ver}} disabled {{/if}}>
        <input type="text" id="apellido" class="fadeIn second" name="apellido" placeholder="Apellido" {{#if usuario}} value="{{usuario.apellido}}" {{/if}} {{#if ver}} disabled {{/if}}>
        <input type="date" id="fechaDeNacimiento" class="fadeIn third" name="fechaDeNacimiento" placeholder="Fecha de nacimiento" {{#if usuario}} value="{{usuario.fechaNacimiento}}" {{/if}} {{#if ver}} disabled {{/if}}>
        <input type="text" id="numDoc" class="fadeIn second" name="numDoc" placeholder="Numero de documento" {{#if usuario}} value="{{usuario.documento.numero}}" {{/if}} {{#if ver}} disabled {{/if}}>
        <!--Agregar un listDe TIPO DE DOC DNI,LC,PASS,CI-->
        <select name="tipoDoc" id="login" class="fadeIn second" {{#if ver}} disabled {{/if}}>
           <option value="">Seleccione el Tipo de Documento </option>
           <option value="DNI">DNI</option>
           <option value="LC">LC</option>
           <option value="PASS">PASS</option>
           <option value="CI">CI</option>
        </select>
        <input type="text" id="login" class="fadeIn second" name="direccion" placeholder="direccion" {{#if usuario}} value="{{usuario.direccion}}" {{/if}} {{#if ver}} disabled {{/if}}>
        {{#if registrar}}
        <div class="controls-contacto">
          <label id="contacto">Contacto: </label>
          <input type="text" id="login" class="fadeIn second" name="nombreContacto" placeholder="Nombre contacto">
          <input type="text" id="login" class="fadeIn second" name="apellidoContacto" placeholder="Apellido contacto">
          <input type="text" id="login" class="fadeIn second" name="emailContacto" placeholder="Email de contacto">
          <input type="text" id="login" class="fadeIn second" name="telefonoContacto" placeholder="Telefono">
          <select name="prefSMS" id="prefSMS" class="fadeIn second">
             <option value="">Desea recibir notificaciones por SMS?</option>
             <option value="SMS">SI</option>
             <option value="noSMS">NO</option>
          </select>
          <select name="prefWPP" id="prefWPP" class="fadeIn second">
             <option value="">Desea recibir notificaciones por WhatsApp?</option>
             <option value="WPP">SI</option>
             <option value="noWPP">NO</option>
          </select>
          <select name="prefMAIL" id="prefMAIL" class="fadeIn second">
             <option value="">Desea recibir notificaciones por email?</option>
             <option value="MAIL">SI</option>
             <option value="noMAIL">NO</option>
          </select>
        {{#if admin}}
        <select name="tipoUsuario" id="login" class="fadeIn second">
           <option value="">Seleccione su tipo de usuario</option>
           <option value="DUENIO">Duenio</option>
           <option value="RESCATISTA">Rescatista</option>
           <option value="VOLUNTARIO">Voluntario</option>
           <option value="ADMIN">Admin</option>
        </select>
        {{/if}}
        {{/if}}

        {{#if editar}}
        <div>
        {{#each contactos}}
        <label id="contacto">Contacto: </label>
        <input type="text" id="login" class="fadeIn second" name="nombreContacto" placeholder="Nombre contacto" value={{nombre}}>
        <input type="text" id="login" class="fadeIn second" name="apellidoContacto" placeholder="Apellido contacto"value={{apellido}}>
        <input type="text" id="login" class="fadeIn second" name="emailContacto" placeholder="Email de contacto"value={{email}}>
        <input type="text" id="login" class="fadeIn second" name="telefonoContacto" placeholder="Telefono"value={{telefono}}>
        <select name="prefSMS" id="prefSMS" class="fadeIn second">
           <option value="">Desea recibir notificaciones por SMS?</option>
           <option value="SMS">SI</option>
           <option value="noSMS">NO</option>
        </select>
        <select name="prefWPP" id="prefWPP" class="fadeIn second">
           <option value="">Desea recibir notificaciones por WhatsApp?</option>
           <option value="WPP">SI</option>
           <option value="noWPP">NO</option>
        </select>
        <select name="prefMAIL" id="prefMAIL" class="fadeIn second">
           <option value="">Desea recibir notificaciones por email?</option>
           <option value="MAIL">SI</option>
           <option value="noMAIL">NO</option>
        </select>
        </div>
        {{/each}}
        {{#if admin}}
        <select name="tipoUsuario" id="login" class="fadeIn second">
           <option value="">Seleccione su tipo de usuario</option>
           <option value="DUENIO">Duenio</option>
           <option value="RESCATISTA">Rescatista</option>
           <option value="VOLUNTARIO">Voluntario</option>
           <option value="ADMIN">Admin</option>
        </select>
        {{/if}}
        {{/if}}

        {{#if ver}}
        <div>
        {{#each contactos}}
        <label id="contacto">Contacto: </label>
        <input type="text" id="login" class="fadeIn second" name="nombreContacto" placeholder="Nombre contacto" value="{{nombre}}" disabled>
        <input type="text" id="login" class="fadeIn second" name="apellidoContacto" placeholder="Apellido contacto" value="{{apellido}}" disabled>
        <input type="text" id="login" class="fadeIn second" name="emailContacto" placeholder="Email de contacto" value="{{email}}" disabled>
        <input type="text" id="login" class="fadeIn second" name="telefonoContacto" placeholder="Telefono" value="{{telefono}}" disabled>
        <select name="prefSMS" id="prefSMS" class="fadeIn second">
           <option value="">Desea recibir notificaciones por SMS?</option>
           <option value="SMS">SI</option>
           <option value="noSMS">NO</option>
        </select>
        <select name="prefWPP" id="prefWPP" class="fadeIn second">
           <option value="">Desea recibir notificaciones por WhatsApp?</option>
           <option value="WPP">SI</option>
           <option value="noWPP">NO</option>
        </select>
        <select name="prefMAIL" id="prefMAIL" class="fadeIn second">
           <option value="">Desea recibir notificaciones por email?</option>
           <option value="MAIL">SI</option>
           <option value="noMAIL">NO</option>
        </select>
        </div>
        {{/each}}
        <select name="tipoUsuario" id="login" class="fadeIn second" disabled>
        <option value="">{{usuario.tipoDeUsuario}}</option>
        </select>
        {{#if voluntario}}
        <input type="text" id="login" class="fadeIn second" name="organizacion" placeholder="Organizacion" value="{{organizacion.nombre}}" disabled>
        {{/if}}
        {{/if}}

        {{#if faltanDatos}}
        <label>Complete todos los campos por favor.</label>
        {{/if}}
        {{#if usuarioEnUso}}
        <label>El usuario ya esta en uso.</label>
        {{/if}}
        {{#if contraseniaInvalida}}
        <label>La contrsenia ingresada es invalida.</label>
        {{/if}}
        {{#if registrar}}
        <button type="submit"  class="fadeIn fourth">Registrar usuario</button>
        {{/if}}
        {{#if editar}}
        <button type="submit"  class="fadeIn fourth">Actualizar usuario</button>
        {{/if}}
      </form>

    </div>
   
  </div>